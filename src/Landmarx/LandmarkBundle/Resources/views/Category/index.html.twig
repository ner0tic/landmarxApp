{% extends '::base.html.twig' %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('/bundles/landmarxlandmark/css/landmarks.css') }}" />
{% endblock %}
{% block content %}
    <h2>{{ "categories" | title }}</h2>
    {{ categories | length }}
    <ul>
        {% for category in categories %}
        <li>
            {{ category.name | title }}
            <p>{{ category.description }}</p>
        </li>
        {% endfor %}
    </ul>
{% endblock %}
